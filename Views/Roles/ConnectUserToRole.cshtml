

<div class="FullWidth50" id="single">
    <form asp-action="ConnectUserToRole" method="post" role="form">
        <div class="mb-3">
            <label class="form-label">User: </label>
            <select name="userId" class="form-control" asp-items="ViewBag.Users">
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Role: </label>
            <select name="roleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save connection</button>
    </form>
</div>